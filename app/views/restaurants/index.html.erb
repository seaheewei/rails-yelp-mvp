<div class=container>

  <h1>All restaurants</h1>

  <p><%= link_to "+ Add a restaurant", new_restaurant_path %></p>

  <% @restaurants.each do |restaurant| %>
    <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
    <p><%= restaurant.category.capitalize %></p>
  <% end %>

</div>
